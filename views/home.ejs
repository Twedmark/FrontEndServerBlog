<%- include("include/header"); -%>

<h1>Home</h1>
<P> <%= startingContent %> </P>


<% posts.forEach(function(posts) { %>
<h1> <%= posts.title %> </h1>

<p>
  <% if(posts.content.length > 100){ %>
  <%= posts.content.substring(0, 100); %>
  <%= "..." %>
  <% }else{ %>
  <%= posts.content; %>
  <% } %>
  <a href="/posts/ <%= posts.title %>">More</a>
</p>
<% }); %>


<%- include("include/footer"); -%>
